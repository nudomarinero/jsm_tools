#!/usr/bin/env python
from jsm import extract
import argparse

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description='Extract sources and data using Tier1 options')
    parser.add_argument('img', help='Image to use as input')
    args = parser.parse_args()
    
    # Get the correct name
    try:
        img = unicode(args.img, encoding='utf-8')
    except(NameError):
        img = args.img
    
    extract.extract_tier1(img)
